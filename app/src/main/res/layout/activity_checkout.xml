<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@color/border_80"
        app:tint="@color/white"
        android:src="@drawable/ic_arrow_left"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_checkout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:text="Checkout"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/iv_back"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_back" />

    <TextView
        android:id="@+id/tv_billing_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:text="Billing Details"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_checkout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_fullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:text="Full Name"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_billing_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_fullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        tools:text="Lee Anton"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_fullname"
        app:layout_constraintStart_toStartOf="@id/tv_fullname"
        app:layout_constraintEnd_toEndOf="@id/tv_fullname" />

    <TextView
        android:id="@+id/tv_region"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:text="Region"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/et_fullname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_region"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        tools:text="Indonesia"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_region"
        app:layout_constraintStart_toStartOf="@id/tv_region"
        app:layout_constraintEnd_toEndOf="@id/tv_region" />

    <TextView
        android:id="@+id/tv_street_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:text="Street address"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/et_region"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_street_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        tools:text="Jl. Teuku Umar Barat No. 337, Padangsambian Klod, Kecamatan Denpasar Barat"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_street_address"
        app:layout_constraintStart_toStartOf="@id/tv_street_address"
        app:layout_constraintEnd_toEndOf="@id/tv_street_address" />

    <TextView
        android:id="@+id/tv_post_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:inputType="number"
        android:text="Postcode"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/et_street_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_post_code"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        tools:text="12031i203"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_post_code"
        app:layout_constraintStart_toStartOf="@id/tv_post_code"
        app:layout_constraintEnd_toEndOf="@id/tv_post_code" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:text="City"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/et_post_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        tools:text="Jl. Teuku Umar Barat No. 337, Padangsambian Klod, Kecamatan Denpasar Barat"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_city"
        app:layout_constraintStart_toStartOf="@id/tv_city"
        app:layout_constraintEnd_toEndOf="@id/tv_city" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:text="Phone"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/et_city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:inputType="phone"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        tools:text="102381832193"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_phone"
        app:layout_constraintStart_toStartOf="@id/tv_phone"
        app:layout_constraintEnd_toEndOf="@id/tv_phone" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        android:text="Email address"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        tools:text="a@a.com"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintStart_toStartOf="@id/tv_email"
        app:layout_constraintEnd_toEndOf="@id/tv_email" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:background="@drawable/background_rounded_white_8_corner"
        app:backgroundTint="@color/white"
        android:textColor="@color/primary"
        android:includeFontPadding="false"
        android:textSize="13sp"
        android:fontFamily="@font/poppins_bold"
        android:text="Next"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>