<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/background_login"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitStart" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="136dp"
        android:layout_height="103dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="@id/logo_guideline"
        app:layout_constraintBottom_toBottomOf="@id/logo_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitStart" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/logo_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="70dp"
        app:cardBackgroundColor="#F5F5f5"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="36dp">

            <TextView
                android:id="@+id/tv_update_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dp"
                android:text="Update Username"
                android:textSize="20sp"
                android:textColor="@color/title"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="Username"
                app:boxBackgroundColor="@color/gray"
                app:hintTextColor="@color/hint"
                app:layout_constraintTop_toBottomOf="@id/tv_update_username">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/primary"
                android:layout_marginTop="24dp"
                android:textAllCaps="false"
                android:minHeight="0dp"
                android:background="@drawable/background_rounded_tosca_8"
                android:paddingVertical="6dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"
                android:text="Update"
                app:layout_constraintVertical_bias="0.4"
                app:layout_constraintTop_toBottomOf="@id/et_username_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>